<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bags Factory</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar {
            background-color: #0a1133; /* Dark navy background */
        }
        .navbar-brand img {
            width: 120px; /* Adjust logo size */
        }
        .navbar-nav .nav-link {
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .navbar-nav .nav-link.active,
        .navbar-nav .nav-link:hover {
            color: #ff3d57; /* Highlight color for active and hover */
        }
        .search-icon {
            color: white;
            font-size: 1.2rem;
            cursor: pointer;
        }
        .hero-section {
            background-image: url('https://via.placeholder.com/1920x800'); /* Replace with your hero image URL */
            background-size: cover;
            background-position: center;
            height: 100vh;
            color: white;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        .products-section img {
            width: 100%;
            border-radius: 5px;
        }
        .about-section img {
            width: 100%;
            border-radius: 5px;
        }
        .certifications img {
            max-width: 100px;
            margin: 10px;
        }
        footer {
            background-color: #2d2d2d;
            color: white;
            padding: 20px 0;
        }
        footer a {
            color: #ff3d57;
            text-decoration: none;
        }
        footer a:hover {
            text-decoration: underline;
        }
        .slider-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
        }
        .slider-content h1 {
            font-size: 3rem;
            font-weight: bold;
        }
        .slider-content p {
            font-size: 1.25rem;
            margin: 20px 0;
        }
        .slider-content .btn {
            background-color: #ff3d57;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            color: white;
        }

    </style>
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="https://via.placeholder.com/120x50" alt="Victor Bags Logo"> <!-- Replace with logo URL -->
                </a>
                <!-- Navigation Links -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#factory">Factory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                    </ul>
                </div>
                <!-- Search Icon -->
                <div>
                    <i class="bi bi-search search-icon"></i> <!-- Bootstrap Icon for search -->
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p>&copy; 2023 Victor Bags Factory Ltd. All rights reserved.</p>
            <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
