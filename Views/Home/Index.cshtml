@{
    ViewData["Title"] = "Home Page";
}

<!-- Slider -->
<div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active">
            <img src="https://via.placeholder.com/1500x600" class="d-block w-100" alt="Slider Image 1">
            <div class="slider-overlay">
                <div class="slider-content">
                    <h1>WE MANUFACTURE</h1>
                    <p>We manufacture and export all kinds of backpack, luggage, duffle bags, tote bags, laptop bags, etc.</p>
                    <a href="#about" class="btn">More About Us</a>
                </div>
            </div>
        </div>
        <!-- Slide 2 -->
        <div class="carousel-item">
            <img src="https://via.placeholder.com/1500x600" class="d-block w-100" alt="Slider Image 2">
            <div class="slider-overlay">
                <div class="slider-content">
                    <h1>YOUR TRUSTED PARTNER</h1>
                    <p>Providing quality and durable bags to meet all your needs.</p>
                    <a href="#products" class="btn">Explore Products</a>
                </div>
            </div>
        </div>
        <!-- Slide 3 -->
        <div class="carousel-item">
            <img src="https://via.placeholder.com/1500x600" class="d-block w-100" alt="Slider Image 3">
            <div class="slider-overlay">
                <div class="slider-content">
                    <h1>QUALITY ASSURED</h1>
                    <p>Certified with international standards for excellence.</p>
                    <a href="#certifications" class="btn">View Certifications</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>

</div>

<!-- Products Section -->
<div id="products" class="products-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Our Products</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <img src="https://via.placeholder.com/300x300" alt="Product 1">
            </div>
            <div class="col-md-4">
                <img src="https://via.placeholder.com/300x300" alt="Product 2">
            </div>
            <div class="col-md-4">
                <img src="https://via.placeholder.com/300x300" alt="Product 3">
            </div>
        </div>
    </div>
</div>

